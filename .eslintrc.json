{
  "root": true,
  "extends": ["@kristiandupont"],
  "env": {
    "node": true
  },
  "overrides": [
    {
      "files": ["*.ts", "*.tsx"],
      "parserOptions": {
        "createDefaultProgram": true,
        "project": "./tsconfig.json"
      }
    }
  ],
  "rules": {
    "quotes": "off",
    "@typescript-eslint/prefer-nullish-coalescing": "off",
    "unicorn/no-array-for-each": "off"
  }
}
